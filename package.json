{
  "name": "@crisfcodes/saleor-native-sdk",
  "version": "0.1.5",
  "description": "This package contains all queries and mutations that are used in saleor storefront adapted to react native. It can be used for semi-custom or fully-custom (with ability to extend existing queries) react native storefront solutions.",
  "homepage": "https://github.com/crisfcodes/saleor-sdk",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "license": "BSD-3-Clause",
  "engines": {
    "node": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/crisfcodes/saleor-sdk"
  },
  "scripts": {
    "build": "tsc",
    "build-types": "apollo codegen:generate --target=typescript gqlTypes && rm -rf src/gqlTypes && move-file gqlTypes src/gqlTypes && globstar -- jscodeshift -t scripts/fixImportPaths.ts src/**/gqlTypes/* --parser=tsx",
    "clean": "rimraf lib",
    "lint": "eslint \"src/**/*.@(tsx|ts|jsx|js)\" --fix && prettier --check \"src/**/*.@(tsx|ts|jsx|js)\" --write",
    "prepare": "npm run clean && npm run build",
    "release": "np",
    "start": "tsc --watch",
    "test": "jest"
  },
  "keywords": [
    "saleor",
    "sdk",
    "storefront",
    "shop",
    "typescript",
    "apollo",
    "graphql",
    "react native",
    "react-native"
  ],
  "authors": [
    "Mirumee <hello@mirumee.com>",
    "Cristian Fl√≥rez <cristianflorez0501@gmail.com>"
  ],
  "bugs": {
    "url": "https://github.com/crisfcodes/saleor-sdk/issues"
  },
  "dependencies": {
    "@apollo/client": "^3.5.8",
    "@react-native-async-storage/async-storage": "1.16.1",
    "@react-native-community/netinfo": "7.1.12",
    "@wry/equality": "^0.5.2",
    "apollo3-cache-persist": "^0.14.0",
    "dayjs": "^1.10.7",
    "extract-files": "^12.0.0",
    "graphql": "^16.3.0",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21"
  },
  "devDependencies": {
    "@pollyjs/adapter-node-http": "^6.0.4",
    "@pollyjs/core": "^6.0.4",
    "@pollyjs/persister-fs": "^6.0.4",
    "@testing-library/react-hooks": "^7.0.2",
    "@types/jest": "^27.4.0",
    "@types/jscodeshift": "^0.11.3",
    "@types/lodash": "^4.14.178",
    "@types/pollyjs__adapter-node-http": "^2.0.1",
    "@types/pollyjs__persister-fs": "^2.0.1",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "@types/react-native": "^0.66.15",
    "@types/setup-polly-jest": "^0.5.1",
    "@types/webappsec-credential-management": "^0.6.2",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "apollo": "^2.33.9",
    "apollo-upload-client": "^17.0.0",
    "eslint": "^8.8.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "globstar": "^1.0.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "jest-expo": "^44.0.1",
    "jscodeshift": "^0.13.1",
    "lint-staged": "^12.3.3",
    "move-file-cli": "^3.0.0",
    "node-fetch": "^3.2.0",
    "np": "^7.6.0",
    "prettier": "^2.5.1",
    "react-dom": "17.0.2",
    "react-test-renderer": "17.0.2",
    "rimraf": "^3.0.2",
    "setup-polly-jest": "^0.10.0",
    "ts-jest": "^27.1.3",
    "typescript": "^4.5.5"
  },
  "peerDependencies": {
    "@apollo/client": "^3.5.8",
    "@react-native-async-storage/async-storage": "1.16.1",
    "@react-native-community/netinfo": "7.1.12",
    "graphql": "^16.3.0",
    "react": "17.0.1",
    "react-native": "0.64.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run build"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "type": "commonjs",
  "typings": "./lib/index.d.ts"
}
